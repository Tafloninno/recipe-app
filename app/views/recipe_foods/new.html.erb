<h2 class="ing_head">Add Ingredients</h2>
<div class="ingredient_container">
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, local: true do |form| %>
    <div class="form_data">
      <%= form.label :food_id %>
      <%= form.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] }, {}, class: "Add_data" %>
    </div>
    <div class="form_data">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "Add_data" %>
    </div>
    <div class="form_data">
      <%= form.submit "Add", class: "submit_new" %>
    </div>
  <% end %>
</div>
